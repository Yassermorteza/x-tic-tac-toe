  "devDependencies": {
    "array-matrix": "Yassermorteza/x-matrix",
    "browserify": "^14.4.0",
    "cp": "^0.2.0",
    "js-beautify": "latest",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.13.1",
    "nodemon": "latest",
    "uglify-js": "latest"
